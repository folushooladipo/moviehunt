.mh-modal-portal
    position absolute
    top 0
    left 0
    width 0
    height 0

    &.mh-modal-portal-is-open
        width 100vw
        height 100vh

    .mh-modal-overlay
        display flex
        flex-direction column
        justify-content center
        width 100%
        height 100%
        background rgba(0, 0, 0, 0.63)

    .mh-modal-content
        display block
        box-shadow 0 2px 15px 0 rgba(0, 0, 0, 0.29)
        width 54%
        min-width 320px
        margin 0 auto
        padding-bottom 7.3%
        background-color $navbar-bg-color
        z-index 7

    .close-modal-btn-container
        text-align right
        padding 5% 5% 0 0
        color #b7b7b7

        .close-modal-btn
            cursor pointer
