.navbar-container
    position fixed
    width 100%
    top 0
    left 0
    height $height-of-navbar
    background-color $navbar-bg-color
    box-shadow 0 2px 15px 0 rgba(0, 0, 0, 0.29)

    &.page-section
        padding 0

    .menu-btn-container
        display inline-flex
        width 8.5%
        height 100%
        flex-direction column
        justify-content center

        .menu-btn
            margin 0 auto

    .go-home-btn-container
        display inline-flex
        flex-direction column
        justify-content center
        vertical-align top
        height 100%
        width 18%

    .go-home-link
        text-decoration none
        color $white

        .moviehunt-logo, .app-name
            vertical-align middle

    .moviehunt-logo
        width 55px

    .app-name
        padding 0 5%
        font-family "Andale Mono", monospace
        font-size 16px
        line-height 18px

    .nav-btns-container
        display inline-block
        width 73.5%
        height 100%
        vertical-align top

    .tab-chooser-container,
    .user-account-actions-container
        display inline-block
        box-sizing border-box
        height 100%

    .tab-chooser-container
        width 59%
        padding 0 2.5% 0 6%

        .tabs-list
            height 100%

            .tabs
                display inline-flex
                flex-direction column
                justify-content center
                width 30%
                height 100%
                opacity 0.6
                text-align center
                font-size 20px
                line-height 23px

                &.active
                    box-shadow 0px -5px 0 inset $blue-for-links-and-btns
                    opacity 1

    .user-account-actions-container
        width 41%
        padding-left 2.5%
        vertical-align top

        .left-divider-container, .login-btn, .sign-up-btn
            display inline-flex
            flex-direction column
            justify-content center
            height 100%
            vertical-align top
            margin-right 10px
            text-align center

        .left-divider-container
            width 1px
            margin-right 10px

            .divider
                background $navbar-section-divider-color
                width 100%
                height 70%

        .login-btn, .sign-up-btn
            margin 0 10px

            &:last-of-type
                margin 0 0 0 10px

        .login-btn
            width 25%

            .login-text
                padding 13.5px

                &:hover
                    border 1px solid $blue-for-links-and-btns
                    cursor pointer

        .sign-up-btn
            width 35%

            .sign-up-text
                border-radius 100px
                padding 13.5px
                background $white
                color $blue-for-links-and-btns

                &:hover
                    color $white
                    background $blue-for-links-and-btns
                    cursor not-allowed
